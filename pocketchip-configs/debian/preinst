#!/bin/sh

set -e

case "$1" in
	install|upgrade)
		dpkg-divert --package pocketchip-configs --add --rename \
			--divert /etc/skel/.config/Thunar/accels.scm \
			/etc/skel/.config/Thunar/cc.accels.scm
		dpkg-divert --package pocketchip-configs --add --rename \
			--divert /etc/skel/.config/xfce4/xfconf/xfce-perchannel-xml/thunar.xml \
			/etc/skel/.config/xfce4/xfconf/xfce-perchannel-xml/cc.thunar.xml
	;;
	*)
	echo "preinst called with unknown argument \`$1`" >&2
		exit 1
	;;
esac
